#include <stdio.h>
#include <stdlib.h>
#include <wiringPi.h>

void main(){
    wiringPiSetupGpio() ;
    int i=0,j=0;
    int pins_leds[]={23,24,25,12,16,20,21,26};
    pinMode(17, INPUT);
    for(i=0;i<8;i++)
      pinMode(pins_leds[i], OUTPUT);

    while(digitalRead(17) != 1){
      for (i = 0; i < 2; i++){
        digitalWrite(pins_leds[23], 1);
        digitalWrite(pins_leds[24], 1);
        digitalWrite(pins_leds[25], 1);
        digitalWrite(pins_leds[12], 1);
        delay(500);
        digitalWrite(pins_leds[23], 0);
        digitalWrite(pins_leds[24], 0);
        digitalWrite(pins_leds[25], 0);
        digitalWrite(pins_leds[12], 0);
        digitalWrite(pins_leds[16], 1);
        digitalWrite(pins_leds[20], 1);
        digitalWrite(pins_leds[21], 1);
        digitalWrite(pins_leds[26], 1);
        delay(500);
        digitalWrite(pins_leds[16], 0);
        digitalWrite(pins_leds[20], 0);
        digitalWrite(pins_leds[21], 0);
        digitalWrite(pins_leds[26], 0);

        if(i==1){
            digitalWrite(pins_leds[23], 1);
            digitalWrite(pins_leds[24], 1);
            digitalWrite(pins_leds[25], 1);
            digitalWrite(pins_leds[12], 1);
            delay(500);

            
        for (j = 0; j < 4; j++){
            digitalWrite(pins_leds[j], 0);
            delay(350);
            }

        digitalWrite(pins_leds[16], 1);
        digitalWrite(pins_leds[20], 1);
        digitalWrite(pins_leds[21], 1);
        digitalWrite(pins_leds[26], 1);
            delay(500);


        for (j = 7; j > 3; j--){
            digitalWrite(pins_leds[j], 0);
            delay(350);
            }
        }

        if (digitalRead(17) == 1) break;
      }
    }
}
